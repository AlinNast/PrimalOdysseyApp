<RegistrationScreen>:
    font_name: 'Roboto'
    font_size: 30
    text_color: 1,1,1, 1
    button_color: 0.2, 0.07, 0.03, 1
    BaseScreen:
        BoxLayout:
            orientation: "vertical"
            padding: dp(20)
            spacing: dp(10)
            size_hint_y: None
            height: self.minimum_height
            pos_hint: {'top': 1}

            BoxLayout:
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(10)
                pos_hint: {'center_x': .5}
                padding: [dp(50), dp(50)]

                Label:
                    text: "Registration"
                    font_size: "24sp"
                    bold: True
                    size_hint_y: None
                    height: dp(40)

                TextInput:
                    id: reg_username_input
                    hint_text: "Username"
                    multiline: False
                    size_hint_y: None
                    height: dp(40)
                    background_color: 1, 1, 1, 0.7  # Adjust the color and transparency as needed                    


                TextInput:
                    id: reg_email_input
                    hint_text: "Email"
                    multiline: False
                    size_hint_y: None
                    height: dp(40)
                    background_color: 1, 1, 1, 0.7  # Adjust the color and transparency as needed

                TextInput:
                    id: reg_password_input
                    hint_text: "Password"
                    multiline: False
                    password: True
                    size_hint_y: None
                    height: dp(40)
                    background_color: 1, 1, 1, 0.7  # Adjust the color and transparency as needed

                TextInput:
                    id: reg_confirm_password_input
                    hint_text: "Confirm Password"
                    multiline: False
                    password: True
                    size_hint_y: None
                    height: dp(40)
                    background_color: 1, 1, 1, 0.7  # Adjust the color and transparency as needed

            BoxLayout:
                size_hint_y: None
                height: dp(140)  # 80 + 60
                spacing: dp(10)
                pos_hint: {'center_x': .5}
                padding: [dp(80), dp(80)]

                Button:
                    id: register_button
                    text: "Register"
                    size_hint_y: None
                    height: dp(40)
                    on_press: root.register(reg_username_input.text, reg_email_input.text, reg_password_input.text, reg_confirm_password_input.text)
                    padding: [dp(80), dp(80)]
                    background_color: root.button_color  # Adjust the color as needed

                Button:
                    text: "Register with Google"
                    size_hint_y: None
                    height: dp(40)
                    on_press: root.register_google()
                    padding: [dp(80), dp(80)]
                    background_color: root.button_color  # Adjust the color as needed

<LoginScreen>:  
    font_name: 'Roboto'
    font_size: 30
    text_color: 1,1,1, 1
    button_color: 0.2, 0.07, 0.03, 1
    
    BaseScreen:
        BoxLayout:
            orientation: "vertical"
            padding: dp(20)
            spacing: dp(10)
            size_hint_y: None
            height: self.minimum_height
            pos_hint: {'top': 1}

            BoxLayout:
                
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(10)
                pos_hint: {'center_x': .5}
                padding: [dp(50), dp(50)]                    
                border: [10, 10, 10, 10]  # Adjust the roundness as needed


                Label:
                    text: "Login"
                    font_name: root.font_name
                    font_size: root.font_size
                    color: root.text_color
                    bold: True
                    size_hint_y: None
                    height: dp(40)

                TextInput:
                    id: email_input
                    hint_text: "Email/User"
                    multiline: False
                    size_hint_y: None
                    height: dp(40)
                    background_color: 1, 1, 1, 0.7  # Adjust the color and transparency as needed
                TextInput:
                    id: password_input
                    hint_text: "Password"
                    multiline: False
                    password: True
                    size_hint_y: None
                    height: dp(40)
                    border_radius: [10, 10, 10, 10]  # Adjust the roundness as needed
                    background_color: 1, 1, 1, 0.7  # Adjust the color and transparency as needed

            BoxLayout:
                size_hint_y: None
                height: dp(140)  # 80 + 60
                spacing: dp(10)
                pos_hint: {'center_x': .5}
                padding: [dp(80), dp(80)] 
                Button:
                    border: [10, 10, 10, 10]  # Adjust the roundness as needed
                    id: login_button
                    text: "Login"
                    size_hint_y: None
                    height: dp(40)
                    on_press: root.login(email_input.text, password_input.text)
                    background_color: root.button_color  # Adjust the color as needed

            BoxLayout:
                size_hint_y: None
                height: dp(60)
                spacing: dp(10)
                pos_hint: {'center_x': .5}
                padding: [dp(80), dp(80)]                    

                Button:
                    id: login_google_button
                    border: [10, 10, 10, 10]  # Adjust the roundness as needed
                    text: "Continue with Google"
                    size_hint_y: None
                    height: dp(40)
                    on_press: root.login_with_google()
                    background_color: root.button_color  # Adjust the color as needed

            BoxLayout:
                orientation: "horizontal"
                size_hint_y: None
                height: dp(60)
                spacing: dp(10)
                pos_hint: {'center_x': .5}
                padding: [dp(80), dp(80)]                    

                Button:
                    text: "Don't have an account? Register"
                    size_hint_y: None
                    height: dp(40)
                    on_press: app.root.current = "registration"  # Change the root screen to "register"
                    background_color: 0.2, 0.07, 0.03, 0.5  # Adjust the color as needed
                    

