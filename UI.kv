<DashboardScreen>:
    canvas.before:
        Color:
            rgba: 0, 0, 0.3, 1  # Dark blue color
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(10)
        size_hint_y: None
        height: self.minimum_height
        pos_hint: {'top': 1}

        Label:
            text: "Dashboard"
            font_size: "24sp"
            bold: True
            size_hint_y: None
            height: dp(40)

    ScrollView:
        y: root.height - self.height - dp(50)  # Offset the ScrollView to leave room for the title

        GridLayout:
            color: rgba(1,1,1)
            id: learning_trees_layout
            cols: 1
            size_hint_y: None
            height: self.minimum_height
            row_default_height: dp(60)  # Set default height for each row
            padding: dp(10)  # Add padding to the top of the GridLayout
            spacing: dp(10)  # Add spacing between children widgets
            Button:
                
                size_hint_y: None
                height: dp(40)




<RegistrationScreen>:
    canvas.before:
        Color:
            rgba: 0.3, 0, 0, 1  # Dark red color
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(10)
        size_hint_y: None
        height: self.minimum_height
        pos_hint: {'top': 1}

        BoxLayout:
            orientation: "vertical"
            size_hint_y: None
            height: self.minimum_height
            spacing: dp(10)
            pos_hint: {'center_x': .5}

            Label:
                text: "Registration"
                font_size: "24sp"
                bold: True
                size_hint_y: None
                height: dp(40)

            TextInput:
                id: reg_username_input
                hint_text: "Username"
                multiline: False
                size_hint_y: None
                height: dp(40)

            TextInput:
                id: reg_email_input
                hint_text: "Email"
                multiline: False
                size_hint_y: None
                height: dp(40)

            TextInput:
                id: reg_password_input
                hint_text: "Password"
                multiline: False
                password: True
                size_hint_y: None
                height: dp(40)

            TextInput:
                id: reg_confirm_password_input
                hint_text: "Confirm Password"
                multiline: False
                password: True
                size_hint_y: None
                height: dp(40)

        BoxLayout:
            size_hint_y: None
            height: dp(140)  # 80 + 60
            spacing: dp(10)
            pos_hint: {'center_x': .5}

            Button:
                id: register_button
                text: "Register"
                size_hint_y: None
                height: dp(40)
                on_press: root.register(reg_username_input.text, reg_email_input.text, reg_password_input.text, reg_confirm_password_input.text)

            Button:
                text: "Register with Google"
                size_hint_y: None
                height: dp(40)
                on_press: root.register_google()

<LoginScreen>:  
    canvas.before:
        Color:
            rgba: 0, 0.3, 0, 1  # Dark green color
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(10)
        size_hint_y: None
        height: self.minimum_height
        pos_hint: {'top': 1}

        BoxLayout:
            orientation: "vertical"
            size_hint_y: None
            height: self.minimum_height
            spacing: dp(10)
            pos_hint: {'center_x': .5}

            Label:
                text: "Login"
                font_size: "24sp"
                bold: True
                size_hint_y: None
                height: dp(40)

            TextInput:
                id: email_input
                hint_text: "Email"
                multiline: False
                size_hint_y: None
                height: dp(40)
                
            TextInput:
                id: password_input
                hint_text: "Password"
                multiline: False
                password: True
                size_hint_y: None
                height: dp(40)

        BoxLayout:
            size_hint_y: None
            height: dp(140)  # 80 + 60
            spacing: dp(10)
            pos_hint: {'center_x': .5}

            Button:
                id: login_button
                text: "Login"
                size_hint_y: None
                height: dp(40)
                on_press: root.login(email_input.text, password_input.text)

        BoxLayout:
            size_hint_y: None
            height: dp(60)
            spacing: dp(10)
            pos_hint: {'center_x': .5}

            Button:
                id: login_google_button
                text: "Login with Google"
                size_hint_y: None
                height: dp(40)
                on_press: root.login_with_google()

        BoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: dp(40)
            spacing: dp(10)
            pos_hint: {'center_x': .5}

            Button:
                text: "Don't have an account? Register"
                size_hint_y: None
                height: dp(40)
                on_press: app.root.current = "registration"  # Change the root screen to "register"

