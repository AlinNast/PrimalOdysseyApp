<RegistrationScreen>:
    BaseScreen:
        BoxLayout:
            orientation: "vertical"
            padding: dp(20)
            spacing: dp(10)
            size_hint_y: None
            height: self.minimum_height
            pos_hint: {'top': 1}

            BoxLayout:
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(10)
                pos_hint: {'center_x': .5}

                Label:
                    text: "Registration"
                    font_size: "24sp"
                    bold: True
                    size_hint_y: None
                    height: dp(40)

                TextInput:
                    id: reg_username_input
                    hint_text: "Username"
                    multiline: False
                    size_hint_y: None
                    height: dp(40)

                TextInput:
                    id: reg_email_input
                    hint_text: "Email"
                    multiline: False
                    size_hint_y: None
                    height: dp(40)

                TextInput:
                    id: reg_password_input
                    hint_text: "Password"
                    multiline: False
                    password: True
                    size_hint_y: None
                    height: dp(40)

                TextInput:
                    id: reg_confirm_password_input
                    hint_text: "Confirm Password"
                    multiline: False
                    password: True
                    size_hint_y: None
                    height: dp(40)

            BoxLayout:
                size_hint_y: None
                height: dp(140)  # 80 + 60
                spacing: dp(10)
                pos_hint: {'center_x': .5}

                Button:
                    id: register_button
                    text: "Register"
                    size_hint_y: None
                    height: dp(40)
                    on_press: root.register(reg_username_input.text, reg_email_input.text, reg_password_input.text, reg_confirm_password_input.text)

                Button:
                    text: "Register with Google"
                    size_hint_y: None
                    height: dp(40)
                    on_press: root.register_google()

<LoginScreen>:  
    font_name: 'Roboto'
    font_size: 20
    text_color: 0.545, 0.341, 0.157, 1
    BaseScreen:
        BoxLayout:
            orientation: "vertical"
            padding: dp(20)
            spacing: dp(10)
            size_hint_y: None
            height: self.minimum_height
            pos_hint: {'top': 1}

            BoxLayout:
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(10)
                pos_hint: {'center_x': .5}

                Label:
                    text: "Login"
                    font_name: root.font_name
                    font_size: root.font_size
                    color: root.text_color
                    bold: True
                    size_hint_y: None
                    height: dp(40)

                TextInput:
                    id: email_input
                    hint_text: "Email"
                    multiline: False
                    size_hint_y: None
                    height: dp(40)
                    
                TextInput:
                    id: password_input
                    hint_text: "Password"
                    multiline: False
                    password: True
                    size_hint_y: None
                    height: dp(40)

            BoxLayout:
                size_hint_y: None
                height: dp(140)  # 80 + 60
                spacing: dp(10)
                pos_hint: {'center_x': .5}

                Button:
                    id: login_button
                    text: "Login"
                    size_hint_y: None
                    height: dp(40)
                    on_press: root.login(email_input.text, password_input.text)

            BoxLayout:
                size_hint_y: None
                height: dp(60)
                spacing: dp(10)
                pos_hint: {'center_x': .5}

                Button:
                    id: login_google_button
                    text: "Login with Google"
                    size_hint_y: None
                    height: dp(40)
                    on_press: root.login_with_google()

            BoxLayout:
                orientation: "horizontal"
                size_hint_y: None
                height: dp(40)
                spacing: dp(10)
                pos_hint: {'center_x': .5}

                Button:
                    text: "Don't have an account? Register"
                    size_hint_y: None
                    height: dp(40)
                    on_press: app.root.current = "registration"  # Change the root screen to "register"

