
<LoginScreen>:  
    canvas.before:
        Color:
            rgba: 0, 0.3, 0, 1  # Dark green color
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(10)
        size_hint_y: None
        height: self.minimum_height
        pos_hint: {'top': 1}

        BoxLayout:
            orientation: "vertical"
            size_hint_y: None
            height: self.minimum_height
            spacing: dp(10)
            pos_hint: {'center_x': .5}

            Label:
                text: "Login"
                font_size: "24sp"
                bold: True
                size_hint_y: None
                height: dp(40)

            TextInput:
                id: email_input
                hint_text: "Email"
                multiline: False
                size_hint_y: None
                height: dp(40)
                
            TextInput:
                id: password_input
                hint_text: "Password"
                multiline: False
                password: True
                size_hint_y: None
                height: dp(40)

        BoxLayout:
            size_hint_y: None
            height: dp(140)  # 80 + 60
            spacing: dp(10)
            pos_hint: {'center_x': .5}

            Button:
                id: login_button
                text: "Login"
                size_hint_y: None
                height: dp(40)
                on_press: root.login(email_input.text, password_input.text)

        BoxLayout:
            size_hint_y: None
            height: dp(60)
            spacing: dp(10)
            pos_hint: {'center_x': .5}
            padding: dp(10), 0, 0, 0  # Add padding to the bottom of the BoxLayout

            Button:
                id: login_google_button
                text: "Login with Google"
                size_hint_y: None
                height: dp(40)
                on_press: root.login_with_google()
            
