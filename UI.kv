<BaseScreen>:
    font_name: 'Open Sans'
    font_size: 200
    text_color: 0, 0, 0.4, 1
    canvas.before:
        Color:
            rgba: 0.2, 0.5, 0.2, 1.0  # base color
        Rectangle:
            pos: self.pos
            size: self.size



<ProfileScreen>:
    canvas.before:
        Color:
            rgba: 0, 0, 0.3, 1  # Dark blue color
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        id: header
        size_hint_y: None
        height: dp(60)
        padding: dp(10), 0, 0, 0  # Adjust padding to move the button to the top left corner
        pos_hint: {'top': 1}
        Button:
            text: "Menu"
            size_hint: None, None
            size: dp(100), dp(40)
            pos: 0, 0  # Move the button to the top left corner
            on_press: app.open_menu()
    BoxLayout:
        orientation: 'vertical'
        id: profile_layout
        Label:
            text: 'Username:'
        
        Label:
            text: 'Email:'
        

<MenuScreen>:
    BoxLayout:
        id: menu_layout
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(10)
        size_hint_y: None
        height: self.minimum_height
        pos_hint: {'top': 1}

        BoxLayout:
            orientation: "vertical"
            size_hint_y: None
            height: self.minimum_height
            spacing: dp(10)
            pos_hint: {'center_x': .5}

            
